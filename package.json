{
  "name": "beryl",
  "version": "0.0.1-alpha.1",
  "description": "Highly customizable timer.",
  "main": "dist/app.js",
  "scripts": {
    "compile": "webpack --config webpack.config.js --mode production",
    "dev-compile": "webpack --config webpack.config.js --mode development",
    "clean": "node scripts/cleanDist.js",
    "start": "npm run clean && npm run dev-compile && electron ./dist/app.js",
    "package": "npm run clean && npm run compile && electron-forge package",
    "make": "electron-forge make"
  },
  "author": "Brenek Harrison",
  "repository": "https://github.com/BrenekH/beryl",
  "license": "UNLICENSED",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.55",
    "@electron-forge/maker-deb": "^6.0.0-beta.55",
    "@electron-forge/maker-rpm": "^6.0.0-beta.55",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.55",
    "@electron-forge/maker-zip": "^6.0.0-beta.55",
    "electron": "^12.0.8",
    "electron-reloader": "^1.2.1",
    "html-webpack-plugin": "^5.3.1",
    "ts-loader": "^9.2.0",
    "typescript": "^4.2.4",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "beryl"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
